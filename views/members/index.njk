{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">
    <a href="/members/create">Novo</a>
    
    <table width="100%">
        <thead>

            <tr>
                <th>member</th>
                <th>Ano Escolar</th>
                <th>Carga Horária</th>
                <th>Ação</th>
            </tr>

            <tbody>

            {% for member in members %}
                <tr>
                    <td>
                        <span style="background-image: url({{member.avatar_url}})"></span>
                        {{member.name}}</td>
                    <td>{{member.anoescolar}}</td>
                    <td>{{member.ch}} h</td>
                    <td><a href="/members/{{member.id}}">Ver</a></td>
                </tr>
            {% endfor %}
            </tbody>
        
        </thead>
    </table>    
</div>

{% endblock %}