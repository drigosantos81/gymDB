{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">
    <a href="/alunos/create">Novo</a>
    
    <table width="100%">
        <thead>

            <tr>
                <th>Aluno</th>
                <th>Ano Escolar</th>
                <th>Carga Horária</th>
                <th>Ação</th>
            </tr>

            <tbody>

            {% for aluno in alunos %}
                <tr>
                    <td>
                        <span style="background-image: url({{aluno.avatar_url}})"></span>
                        {{aluno.name}}</td>
                    <td>{{aluno.anoescolar}}</td>
                    <td>{{aluno.ch}} h</td>
                    <td><a href="/alunos/{{aluno.id}}">Ver</a></td>
                </tr>
            {% endfor %}
            </tbody>
        
        </thead>
    </table>    
</div>

{% endblock %}